{
    "name": "Archethic",
    "version": "1.0.0",
    "description": "Archethic communication extension.",
    "manifest_version": 2,
    "icons": {
        "128": "icon-128.png",
        "64": "icon-64.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "file://*/*"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "webNavigation"
    ]
}